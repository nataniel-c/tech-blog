<div class="display-inline-block card card-rounded bg-info px-3 mt-2 mx-2">
  <h1>Your Dashboard</h1>
</div>
</header>
<main class="container container-fluid mt-5">

  {{#if posts.length}}
  <div class="col-md-6 post-list">

    {{#each posts as |post|}}
    <div class="row post bg-dark">
      <div>
        <h4><a href="/project/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col">
        <p>posted on: {{format_date post.date_created}}</p>
      </div>
    </div>
    <div>
      <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
