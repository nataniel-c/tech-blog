<div class="display-inline-block card card-rounded bg-info px-3 mt-2 mx-2">
  <h1>Your Dashboard</h1>
</div>
</header>
<main class="container container-fluid mt-5">

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Projects:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
