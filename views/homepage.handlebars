<!-- Loop over each object in the projects array -->
<div class="display-inline-block card card-rounded bg-info px-3 mt-2 mx-2">
  <h1>The Tech Blog</h1>
</div>
</header>
<main class="container container-fluid mt-5">
{{#each posts as |post| }}
<div class="card mb-4 post">
  <div class="card-header bg-dark">
    <h2 class="mx-3">
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
  </div>
  <div class="card-body text-justify m-1 mx-3">
    <p>
      {{post.content}}
    </p>
  </div>
  <div class="card-footer">
    Posted by {{post.user.name}} on {{format_date post.date_created}}
  </div>
</div>
{{/each}}

