<div class="display-inline-block card card-rounded bg-info px-3 mt-2 mx-2">
  <h1>The Tech Blog</h1>
</div>
</header>
<main class="container container-fluid mt-5">

<div class="card mb-4 post">
  <div class="card-header bg-dark text-light">
    <h2 class="mx-3">
      {{title}}
    </h2>
  </div>
  <div class="card-body text-justify m-1 mx-3">
    <p>
      {{content}}
    </p>
  </div>
  <div class="card-footer">
    Posted by {{user.name}} on {{format_date date_created}}
  </div>
</div>

{{#each comments as |comment|}}
<div class="comment">
  <div class="mb-4 card">
    <div class="card-header bg-dark">
      <div class="px-2">{{comment.user.name}} commented:</div>
    </div>
    <div class="card-body text-justify m-1 mx-3">
      <p>
        {{comment.content}}
      </p>
    </div>
    <div class="card-footer">
      Posted on {{format_date date_created}}
    </div>
  </div>
</div>
{{/each}}

{{#if logged_in}}
<div class="card" id="comment-box">
  <div class="card-header bg-dark">
    <h5 class="mx-3">Add your comment</h5>
  </div>
  <div class="px-3">
    <form class="form new-comment-form">
      <div class="form-group">
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post Comment</button>
      </div>
    </form>
  </div>
</div>
{{else}}
<div class="card">
  <div class="card-header bg-secondary">
    <h5 class="px-2">Login to leave a comment</h5>
  </div>
</div>
{{/if}}
<script src="/js/thread.js"></script>

